@{
    ViewData["Title"] = "POS Cart";
    var cartItems = ViewBag.CartItems as List<POS_System.Models.CartItem>;
}

<div class="row mt-4">
    
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h4 class="mb-3">Cart</h4>

      
            <table class="table table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Qty</th>
                        <th>Subtotal</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (cartItems.Any())
                    {
                        foreach (var item in cartItems)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>₹@item.Product.Price</td>
                                <td style="width:100px">
                                    <form method="post" asp-action="UpdateQuantity">
                                        <input type="hidden" name="productId" value="@item.Product.Id" />
                                        <input type="number" name="quantity" class="form-control form-control-sm"
                                               value="@item.Quantity" min="1" onchange="this.form.submit()" />
                                    </form>
                                </td>
                                <td>₹@item.Subtotal</td>
                                <td>
                                    <form method="post" asp-action="Remove">
                                        <input type="hidden" name="productId" value="@item.Product.Id" />
                                        <button class="btn btn-danger btn-sm">✕</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="5" class="text-center">Cart is empty</td></tr>
                    }
                </tbody>
            </table>

       
            <div class="mt-3">
                <h6>Total Items: @ViewBag.TotalItems</h6>
                <h6>Subtotal: ₹@ViewBag.Subtotal</h6>
                <h6>Tax (4%): ₹@ViewBag.Tax</h6>
                <h6>Total: ₹@ViewBag.Total</h6>

                <form method="post" asp-action="ApplyDiscount" class="d-flex align-items-center mb-2">
                    <label class="me-2">Discount:</label>

                    <input type="number" step="0.01" name="discount" value="@ViewBag.Discount"
                           class="form-control form-control-sm me-2" style="width:120px" />

                    <select name="type" class="form-select form-select-sm me-2" style="width:100px">
                        <option value="flat">₹ Flat</option>
                        <option value="percent">% Off</option>
                    </select>

                    <button class="btn btn-secondary btn-sm">Apply</button>
                </form>

                <h5 class="text-success">Payable: ₹@ViewBag.Payable</h5>
            </div>

           
            <div class="d-flex gap-2 mt-3">
                <form method="post" asp-action="Suspend"><button class="btn btn-warning w-100">Suspend</button></form>
                <form method="post" asp-action="Restore"><button class="btn btn-info w-100">Restore</button></form>
                <form method="post" asp-action="Cancel"><button class="btn btn-danger w-100">Cancel</button></form>
            </div>
            <div class="d-flex gap-2 mt-2">
                <form method="post" asp-action="Bill"><button class="btn btn-primary w-100">Bill</button></form>
                <form method="post" asp-action="Payment"><button class="btn btn-success w-100">Payment</button></form>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-info mt-3">@TempData["Message"]</div>
            }
        </div>
    </div>

    
    <div class="col-md-6">
        <div class="card shadow p-3">
            <h4 class="mb-3">Add Product</h4>
            <form method="post" asp-action="AddToCart" class="row g-2">
                <div class="col-5">
                    <input type="text" name="name" placeholder="Product Name" class="form-control" required />
                </div>
                <div class="col-3">
                    <input type="number" name="price" step="0.01" placeholder="Price" class="form-control" required />
                </div>
                <div class="col-2">
                    <input type="number" name="quantity" placeholder="Qty" class="form-control" value="1" min="1" required />
                </div>
                <div class="col-2">
                    <button class="btn btn-primary w-100">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
